[user]
    email = david.elbaze.93@gmail.com
    name = David Elbaze

[alias]
    log = log --color
    co = checkout
    br = branch
    ci = commit
    st = status
    # give smthing like
    # * 4be77ea  Add issue 42. 4 weeks ago by Julien
    lg = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)%d%Creset %s %Cgreen%ar%Creset by %C(yellow)%an%Creset' --abbrev-commit
    dw = diff --color-words

[color]
    ui = auto
    diff = auto

[help]
    autocorrect = 1

[diff]
    tool = meld
    submodule = log
    mnemonicprefix = true

[difftool]
    prompt = false

[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"
[core]
    quotepath = false
    commitGraph = true
    autocrlf = input
[gc]
    writeCommitGraph = true
